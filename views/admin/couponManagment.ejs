<!-- Modal Structure -->
<div
  class="modal fade"
  id="addCouponModal"
  tabindex="-1"
  aria-labelledby="editCategoryModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editCategoryModalLabel">Add New Coupon</h5>
        <button
          type="button"
          class="close-btn"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="editCategoryForm" method="post" action="/admin/couponManagment" onsubmit="return validDetailsModal()">
          <div class="form-group">
            <label for="categoryName">Coupon Code</label>
            <input
              type="text"
              class="form-control"
              id="coupon_code"
              name="coupon_code"
              
            />
            <p id="coupon-error" style="color: brown; font-size: small"></p>
          </div>
          <div class="form-group">
            <label for="categoryName">Discount</label>
            <input
              type="text"
              class="form-control"
              id="discount"
              name="discount"
              
            />
            <p id="discount-error" style="color: brown; font-size: small"></p>
            <div class="form-group">
            <label for="categoryName">Minimum Amount</label>
            <input
              type="text"
              class="form-control"
              required
              name="minimum_amount"
              
            />
          </div>
          </div>
          <div class="form-group">
            <label for="categoryName">Start Date</label>
            <input
              type="date"
              class="form-control"
              required
              name="start_date"
              
            />
          </div>
          <div class="form-group">
            <label for="categoryName">Expiry Date</label>
            <input
              type="date"
              class="form-control"
              required
              name="expiry_date"
              
            />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function formatDate(date) {
    return date.toLocaleDateString("en-GB");
  }


    function validDetailsModal() {
    var name = document.getElementById("coupon_code").value;
    let discount = document.getElementById('discount').value;  
    document.getElementById('coupon-error').textContent = '';
    document.getElementById('discount-error').textContent = '';

    if (!name || name.trim().length == 0) {
      document.getElementById("coupon-error").innerHTML = "Field is required";
      return false;
    }
    if (!discount || discount.trim().length == 0) {
      document.getElementById("discount-error").innerHTML = "Field is required";
      return false;
    }

    return true;
  }

  function populateModal(categoryId, categoryName) {
    // Set the form action dynamically based on the category ID
    document.getElementById("editCategoryForm").action =
      "/admin/catetoryManagment/editCoupon/"+categoryId;

    // Set the current category name in the input field
    document.getElementById("categoryName").value = categoryName;
  }
</script>

