<%- include('../layouts/user/userhead') %> 
<%-include('../layouts/user/userheader') %> <% if(orderData.length > 0){ %>
<section class="h-100 h-custom" style="background-color: #d2c9ff">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div
          class="card card-registration card-registration-2"
          style="border-radius: 15px"
        >
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-12">
                <div class="p-5">
                  <div
                    class="d-flex justify-content-between align-items-center mb-5"
                  >
                    <h1 class="fw-bold mb-0">Order List</h1>
                    <h6 class="mb-0 text-muted">
                      <%= orderData.length %> items 
                    </h6>
                  </div>
                  <hr class="my-4" />
                  <% orderData.forEach(order => { %>

                  <div
                    class="row d-flex justify-contern-center align-items-center"
                  >
                    <div class="order-card">
                      <div
                        class="d-flex justify-content-between align-items-center"
                      >
                        <div>
                          <h3 class="fw-bold">Order ID: # <%= order.order_id %></h3>
                          <!-- <p class="text-muted">
                            Malang, Indonesia âž” Emir's House, Indonesia
                          </p> -->
                        </div>
                        <div>
                          <!-- <span class="order-status on-deliver px-4 fs-6"
                            >On Deliver</span
                          > -->
                          <%
  var createdAtDate = new Date(order.createdAt);  
  var futureDate = new Date(createdAtDate); 
  futureDate.setDate(createdAtDate.getDate() + 3); // Add 3 days

  var options = { day: '2-digit', month: 'short', year: 'numeric' };
  var formattedDate = futureDate.toLocaleDateString('en-GB', options);
%>
<% if(order.paymentStatus != "failed" ){ %>
<p class="text-muted">
  Estimated arrival: <%= formattedDate %>
</p>
<% } %>

                        </div>
                      </div>

                      <div class="row d-flex justify-content-between">
                        <% let count =0 %> <% order.products.forEach(element =>
                        { %> <% if(count < 2) {%>
                        <div
                          class="col-md-5 me-3 product-item d-flex align-items-center"
                        >
                          <img
                            style="width: 60px; margin-left: 10px"
                            src="/public/productImgs/<%= element.product_id.images.image1 %>"
                            alt="Nike Air Max"
                            class="img-fluid"
                          />
                          <p class="fs-3 ms-5 col-md-6">
                            <%= element.product_id.product_name %>
                          </p>
                          <p class="ps-5">
                            Rs
                            <span class="fw-bold text-primary"
                              ><%= element.product_id.price %></span
                            >
                          </p>
                        </div>
                        <% count++ %> <% } %> <% }); %>
                      </div>

                      <div
                        class="d-flex justify-content-between align-items-center mt-3"
                      >
                        <p>
                          Total: Rs <%= order.grant_total_ %> (<%=
                          order.products.length %> items)
                        </p>
                        <a
                          class="btn btn-outline-primary px-5 fs-5"
                          href="/home/orderDetails/<%= order._id %>"
                          >More Details</a
                        >
                      </div>
                    </div>
                  </div>

                  <% }); %>

                  <div
                    class="pt-5"
                    style="display: flex; justify-content: space-between"
                  >
                    <h6 class="mb-0">
                      <a href="#!" class="text-body"
                        ><i class="fas fa-long-arrow-alt-left me-2"></i>Back to
                        shop</a
                      >
                    </h6>
                  </div>
                  <div class="pt-5"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% }else{ %>
<section class="h-100 h-custom" style="background-color: #d2c9ff">
  <div div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12">
        <div
          class="card card-registration card-registration-2"
          style="border-radius: 15px"
        >
          <div class="card-body cart">
            <div class="col-sm-12 empty-cart-cls text-center">
              <img
                src="https://i.imgur.com/dCdflKN.png"
                width="180"
                height="180"
                class="img-fluid mb-4 mr-3"
              />
              <h2><strong>Your Cart is Empty</strong></h2>
              <h3>Add something to make me happy :</h3>
              <a
                href="/home/shop"
                class="btn btn-primary cart-btn-transform btn-lg m-3"
                data-abc="true"
                >continue shopping</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

