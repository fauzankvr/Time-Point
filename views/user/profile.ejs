<%- include('../layouts/user/userhead') %>
<%- include('../layouts/user/userheader') %>

<form action="/home/profile/update" method="post" onsubmit="return validateForm()">
<div class="container rounded bg-light mt-5 mb-5 " style="display: none;" id="expanded">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span><a href="">Edit Profile</a></span></div>
        </div>
        <div class="col-md-9 border-right">
            <div class="p-3 py-5 ">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h1 class="text-right">Profile Settings</h1>
                </div>
                <hr>
                <div class="row mt-3 ">
                    <div class="col-md-6">
                        <label class="labels form-lab">Name</label>
                        <input type="text" class="form-control form-fs" name="name" id="name"  placeholder="first name" value="<%= userData.name %>">
                        <p class="text-danger" id="nameError"></p>
                    </div>
                    <div class="col-md-6"><label class="labels form-lab">Phone Number</label><input type="text" class="form-control form-fs" id="phone" value="<%= userData.phone %>" name="phone" placeholder="Phone number">
                    <p class="text-danger" id="phoneErroor"></p>
                    </div>

                </div>
                <div class="row mt-2 ">
                    <div class="col-md-6">
                        <label class="labels form-lab">Email</label>
                        <input type="text" class="form-control form-fs"  disabled placeholder="first name" value="<%= userData.email %>">
                        <input type="hidden" name="email" id="email" value="<%= userData.email %>">
                    </div>
                    <div class="col-md-6 m-auto d-flex mt-5">
                        <a class="btn btn-primary m-auto fs-4" href="/home/profile/changePassword">Change Your Password</a>
                    </div>
                </div>

                </div>
        </div>
    </div>
    <div class="col-md-12 d-flex justify-content-center align-items-center" style="height: 70px;">
        <button class="btn btn-primary profile-button fs-3"  type="submit">Save Profile</button>
    </div>
</div>
</form>


<div class="container col-md-12 rounded bg-light mt-5 mb-5 " id="profile">
    <div class="row d-flex justify-contern-center align-items-center">
        <div class="col-4">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"></div>
        </div>

        <div class="col-4">
            <h2><%= userData.name %></h2>
            <p><%= userData.email %></p>
            <p><%= userData.phone %></p>
        </div>
        <div class="col-4">
            <div class="mt-5 text-center"><button class="btn btn-primary profile-button" onclick="expand()" type="button">Edit Profile</button></div>
        </div>
    </div>
</div>

<div class="container col-md-12 rounded bg-light mt-5 mb-5 py-3 ">
    <div class="mt-4"><h2 class="text-center">Addresses Details</h2></div>
    <hr>
    <div class="row d-flex justify-contern-center align-items-center">
     <% addressData.forEach(element => { %>
        <div class="col-md-6">
            <div class="address-card">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="mb-1"><strong><%= element.name %></strong></p>
                        <p class="mb-1"><%= element.locality %></p>
                        <p class="mb-1"><%= element.city %>,<%= element.state %>,<%= element.pincode %></p>
                        <p class="mb-0"><%= element.phone %></p>
                    </div>
                    <div class="d-flex align-items-start ">
                        <a href="/editAddress/<%= element._id %>?profile=true" class="icon-btn " title="Edit">
                            <i class="fas fa-edit" style="margin-right: 12px;"></i>
                        </a>

                    
                        <button class="icon-btn ml-4" title="Delete" onclick="deleteAddress('<%= element._id %>')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
     <%}); %>

        <!-- Add New Address Button -->
        <div class="col-md-6 d-flex align-items-center">
            <a  href="/addAddress?profile=true"  class="add-new-address" style="padding-left: 100px; padding-right: 100px">
                <h3 class="text-danger">+ Add New Address</h3>
            </a>
        </div>
    
    </div>
</div>

</div>

<script>
    function validateForm() {
        var name = document.getElementById("name").value;
        var phone = document.getElementById("phone").value;

        document.getElementById("nameError").innerHTML = "";
        document.getElementById("phoneErroor").innerHTML = "";
        
        if (name == "" || name.trim().length ==0) {
            document.getElementById("nameError").innerHTML = "Name must be filled out";
            return false;
        }
        if (email == "") {           
            alert("Email must be filled out");
            return false;
        } 
        const mobileRegex = /^[6-9]\d{9}$/;
        if (phone == "" || !mobileRegex.test(phone)) {
            document.getElementById("phoneErroor").innerHTML = "Please Enter a valid Phone Number";
            return false;
        }
        return true;
    }
    function expand() {
        const expanded = document.getElementById('expanded');
        const profile = document.getElementById('profile');
        profile.style.display = "none";
        expanded.style.display = "block";

    }
   function deleteAddress(id) {
    Swal.fire({
        title: 'Are you sure you want to delete this address?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!',
        customClass: {
            popup: "swal-custom-font",
        },
    }).then((result) => {
        if (result.isConfirmed) {
            fetch('/deleteAddress/' + id, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.status) {
                    Swal.fire({
                        title: 'Deleted!',
                        text: data.message,
                        icon: 'success',
                        timer: 2000,
                         customClass: {
                      popup: "swal-custom-font",
                   },
                    }).then(() => {
                        window.location.reload(); // Optionally reload the page
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: data.message || 'Failed to delete address.',
                        icon: 'error',
                        timer: 2000
                    });
                }
            })
            .catch(error => {
                Swal.fire({
                    title: 'Error!',
                    text: 'Something went wrong. Please try again later.',
                    icon: 'error',
                    timer: 2000
                });
                console.error('There was a problem with the fetch operation:', error);
            });
        }
    });
}

function cancelOrder(productId, orderId) {
    Swal.fire({
        title: 'Are you sure you want to cancel this order?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, cancel it!',
        customClass: {
            popup: "swal-custom-font",
        },
    }).then((result) => {
        if (result.isConfirmed) {
            fetch('/cancelOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId, orderId }) // Pass the data correctly
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire(
                        'Cancelled!',
                        'Your order has been canceled.',
                        'success'
                    ).then(() => {
                        window.location.reload(); // Optionally reload the page
                    });
                } else {
                    Swal.fire(
                        'Error!',
                        data.message || 'There was a problem canceling your order.',
                        'error'
                    );
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire(
                    'Error!',
                    'There was a problem canceling your order.',
                    'error'
                );
            });
        }
    });
}


</script>


