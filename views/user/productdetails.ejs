            </ol>
        </div>
    </nav>

    <!-- Main Product Section -->
    <div class="container my-5">
        <div class="row">
            <!-- Product Images -->
            <div class="col-md-6">
                <div class="row">
                <div class="thumbnail-images col-4 d-flex flex-column">
                    <img src="/public//productImgs/<%= productData.images.image2 %>" class="img-thumbnail" onclick="changeMainImage(this)" alt="Watch Thumbnail 1">
                    <img src="/public//productImgs/<%= productData.images.image3 %>" class="img-thumbnail " onclick="changeMainImage(this)" alt="Watch Thumbnail 2">
                    <img src="/public//productImgs/<%= productData.images.image4 %>" class="img-thumbnail " onclick="changeMainImage(this)" alt="Watch Thumbnail 3">
                </div>
              <div class="main-image-container  mb-4">
                     <img src="/public/productImgs/<%= productData.images.image1 %>" class="main-image" id="main-image1" alt="Fossil Grant Brown Watch">
                </div>
                </div>
            </div>
      <div class="col-lg-6 col-md-8 mx-auto product-card">
        <!-- Product Title -->
        <h4 class="product-title"><%= productData.product_name %></h4>
        <p class="product-description"></p>

        <!-- Rating and Reviews -->
        <div class="d-flex align-items-center mb-3">
          <span class="badge bg-success me-2">4.3</span>
          <small class="text-muted">225 Ratings</small>
        </div>

        <!-- Price -->
        <div class="product-pricing mb-3">
          <span class="product-price fs-2">₹<%= productData.price %></span>
          <span class="product-old-price ms-2">₹1799</span>
          <span class="product-discount ms-2">(55% OFF)</span>
        </div>
  <hr class="mb-4">
       
        <%if (productData.stock <= 5 && productData.stock > 0) { %>
                <div class="out_of_stock">
                    <h2 class="text-danger">Reminging Stock : <b><%= productData.stock %></b></h2>
                </div>
                <% }else if (productData.stock == 0 )  { %>
                    <div class="out_of_stock">
                    <p class="text-danger fs-2 fw-bold">Out of Stock</p>
                </div>
                    <% }else if (productData.stock > 5)  { %>
                    <div class="out_of_stock">
                    <p class="text-success  fs-2 fw-bold">In Stock</p>
                </div>
                   <% } %>


        <!-- Buttons -->
        <div class="d-flex mb-5 mt-5">
            <% if(productData.stock == 0 ) {%>
                <button disabled class="btn btn-ligth me-3 fs-3 fw-bold p-3">ADD TO CART</button>
            <% }else {%>
                <button onclick="addToCart('<%= productData.id %>')" class="btn btn-danger me-3 fs-3 fw-bold p-3">ADD TO CART</button>
            <% }%>
          
          <button class="btn btn-outline-danger btn-wishlist me-3 fs-3 fw-bold p-3" onclick="addToWishlist('<%= productData.id %>')">WISHLIST</button>
        </div>

        <!-- Delivery Options -->
        <div class="delivery-options mt-4">
          <h6>DELIVERY OPTIONS</h6>
          <p>PIN Code: <span class="text-success">673639</span></p>
          <ul class="list-unstyled">
            <li>Get it by <strong>Mon, Sep 09</strong></li>
            <li>Pay on delivery available</li>
            <li>Easy 14 days return & exchange available</li>
          </ul>
        </div>
      </div>

