<%- include('../layouts/user/userhead') %>
 <style>
        .product-images {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .main-image {
            width: 100%;
            height: auto;
            object-fit: cover;
            max-height: 500px; 
        }
        .thumbnail-images {
            display: flex;
            gap: 10px;
        }
        .thumbnail-images img {
            width: 140px;
            height: 140px;
            object-fit: cover;
            cursor: pointer;
        }
        .product-title {
            font-size: 24px;
            font-weight: bold;
        }
        .product-price {
            font-size: 20px;
            color: #ff0000;
        }
        .product-rating {
            color: #f8c102;
        }
        .color-options button {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }
        .buy-button {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
        }
        .delivery-info p {
            margin-bottom: 5px;
        }
    </style>
<%- include('../layouts/user/userheader') %>



 <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="bg-light py-3 mt-5">
        <div class="container">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Men</a></li>
                <li class="breadcrumb-item active" aria-current="page">Watch Details</li>
            </ol>
        </div>
    </nav>

    <!-- Main Product Section -->
    <div class="container my-5">
        <div class="row">
            <!-- Product Images -->
            <div class="col-md-6">
                <div class="row">

                <div class="thumbnail-images col-4 d-flex flex-column">
                    <img src="/public//productImgs/<%= productData.images.image2 %>" class="img-thumbnail " alt="Watch Thumbnail 1">
                    <img src="/public//productImgs/<%= productData.images.image3 %>" class="img-thumbnail " alt="Watch Thumbnail 2">
                    <img src="/public//productImgs/<%= productData.images.image4 %>" class="img-thumbnail " alt="Watch Thumbnail 3">
                </div>
                <div class="mb-4 col-8">
                    <img src="/public//productImgs/<%= productData.images.image1 %> " class="main-image" id="main-image1"  alt="Fossil Grant Brown Watch">
                </div>

                </div>
                
                
            </div>

            <!-- Product Details -->
            <div class="col-md-6">
                <h1 class="product-title"><%= productData.product_name %></h1>
                <p class="product-price">₹<%= productData.price %></p>
                <p class="product-rating">
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-half"></i> (39 reviews)
                </p>
                <p><%= productData.discription %></p>

                <%if (productData.stock < 5 && productData.stock > 0) { %>
                <div class="out_of_stock">
                    <h4 class="text-danger">Reminging Stock : <b><%= productData.stock %></b></h4>
                </div>
                <% }else if (productData.stock == 0 )  { %>
                    <div class="out_of_stock">
                    <p class="text-danger">Out of Stock</p>
                </div>
                    <% } %>
      
               

                <!-- Buy Now -->
                <div class="mb-3 mt-5">
                    <button class="btn btn-primary btn-lg">Buy Now</button>
                </div>

                <!-- Delivery Options -->
                <div>
                    <p><i class="bi bi-truck"></i> Free Delivery</p>
                    <p><i class="bi bi-arrow-repeat"></i> Return Delivery</p>
                </div>
            </div>
        </div>
    </div>

   
<script>
        let options={
            width:350,
            zoomWidth:500,
            offset:{ vertical:0,horizontal:-700 },
            zoomType: 'inner', // Zoom inside the image container
            cursor: 'crosshair'
        };
        new ImageZoom(document.getElementById("main-image1"),options)
     </script>


