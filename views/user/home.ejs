<div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-inner" style="background-color: rgb(219, 219, 219);">
        <!-- First Slide -->
        <div class="carousel-item active">
            <div class="d-flex align-items-center">
                <div class="container">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 text-center text-lg-start">
                            <div class="hero__caption">
                                <h1 class="poppins-bold" style="font-size: 60px;">Select Your New <br> Perfect Style</h1>
                                <p class="poppins-thin" style="font-size: 22px; font-weight: 40;">Handpicked watches that blend exceptional craftsmanship with timeless design. Each piece promises unmatched elegance and quality for every occasion.</p>
                                <!-- Hero-btn -->
                                <div class="hero__btn">
                                    <a href="industries.html" class="btn btn-primary" style="font-size: 18px;">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
                            <div class="hero__img">
                                <img src="/public/user/img/watch.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Second Slide -->
        <div class="carousel-item">
            <div class="d-flex align-items-center">
                <div class="container">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 text-center text-lg-start">
                            <div class="hero__caption">
                                <h1 class="poppins-bold" style="font-size: 60px;">Explore our finest collection <br> of watches</h1>
                                <p class="poppins-thin" style="font-size: 22px; font-weight: 40;">Experience the perfect fusion of artistry and precision. Every watch embodies refined style and enduring quality.</p>
                                <!-- Hero-btn -->
                                <div class="hero__btn">
                                    <a href="industries.html" class="btn btn-primary" style="font-size: 18px;">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
                            <div class="hero__img">
                                <img src="/public/user/img/watch3.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


