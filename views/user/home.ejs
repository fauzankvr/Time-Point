<!-- Cards -->
 <h2 class="text-center "> New Arrivals </h2>
<div class="container">
  <div class="col-lg-12">
    <div class="row">
   <% productData.slice(0, 4).forEach(product => { %>
  <div class="col-lg-3 col-sm-6 mb-3 col-md-4">
    <div class="card mx-3 mt-5 px-5" style="width: 28rem;">
      <a href="/home/productDetails/<%= product.id %>">
        <img src="/public/productImgs/<%= product.images.image1 %>" class="card-img-top img-fluid mb-1" alt="<%= product.product_name %>">
      </a>
      <div class="card-body">
        <h3 class="card-title" style="font-size: 15px;"><%= product.product_name %></h3>
        <h3 class="py-3">₹ <%= product.price %> | <strike style="color: rgb(99, 98, 98);">₹ 25,000</strike></h3>
        <div class="star-rating">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="far fa-star"></i>
        </div>
      </div>
    </div>
  </div>
<% }); %>

</div>
</div>
