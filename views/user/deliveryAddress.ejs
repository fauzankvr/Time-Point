<%- include('../layouts/user/userhead') %> <%-
include('../layouts/user/userheader') %>

<section class="h-100 h-custom" style="background-color: #d2c9ff">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div
          class="card card-registration card-registration-2"
          style="border-radius: 15px"
        >
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-8">
                <div class="p-5">
                  <div
                    class="d-flex justify-content-between align-items-center mb-5"
                  >
                    <h1 class="fw-bold mb-0">Select Delivery Address</h1>
                  </div>
                  <hr class="my-4" />

                  <% addressData.forEach((element, index) => { %>
                  <div class="row mb-2">
                    <div class="col-12">
                      <div
                        class="card address-card <%= index === 0 ? 'selected' : '' %>"
                        data-index="<%= index %>"
                        data-id="<%= element._id %>"
                      >
                        <div class="row">
                          <div class="col-9">
                            <div class="card-body">
                              <h5 class="card-title fs-3 fw-bold">
                                <%= element.name %>
                              </h5>
                              <p class="card-text"><%= element.locality %></p>
                              <p class="card-text">
                                <%= element.city %>, <%= element.state %> - <%=
                                element.pincode %>
                              </p>
                              <p class="card-text">
                                Phone: <%= element.phone %>
                              </p>
                            </div>
                          </div>

                          <div class="col-3 justify-content-end">
                            <a
                              href="/editAddress/<%= element._id %>?profile=false"
                              class="icon-btn"
                              style="margin-left: 49px; margin-right: 15px"
                              title="Edit"
                            >
                              <i class="fas fa-edit fs-2"></i>
                            </a>
                            <button
                              class="icon-btn ml-5"
                              title="Delete"
                              onclick="deleteAddress('<%= element._id %>')"
                            >
                              <i class="fas fa-trash-alt fs-2"></i>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }) %>

                  <a href="/addAddress?profile=false">
                    <div class="card mt-4">
                      <div class="card-body d-flex align-items-center">
                        <span style="margin-right: 10px">
                          <i class="fas fa-plus"></i
                        ></span>
                        <h5 class="card-title fs-3">Add New Address</h5>
                      </div>
                    </div>
                  </a>

                  <div
                    class="pt-5"
                    style="display: flex; justify-content: space-between"
                  >
                    <h6 class="mb-0">
                      <a href="/cart" class="text-body"
                        ><i class="fas fa-long-arrow-alt-left me-2"></i>Back to
                        cart</a
                      >
                    </h6>
                  </div>
                  <div class="pt-5"></div>
                </div>
              </div>
              
              <div class="col-lg-4 bg-body-tertiary">
                <div class="p-5">
                  <h3 class="fw-bold mb-5 mt-2 pt-1 text-uppercase">
                    Price details
                  </h3>
                  <hr class="my-4" />
                  <div class="d-flex justify-content-between mb-5">
                    <h4 class="mb-3">Price(items(<%= cartData.length %>))</h4>
                    <h4 class="mb-3 text-success">
                      ₹ <span id="total_price2"><%= total %></span>
                    </h4>
                  </div>
                  <div class="d-flex justify-content-between mb-5">
                    <h4 class="mb-3">Delivery Charges</h4>
                    <h4 class="mb-3 text-success">Free</h4>
                  </div>

                  <hr class="my-4" />

                  <div class="d-flex justify-content-between mb-5">
                    <h3 class="text-uppercase">Total price</h3>
                    <h3>₹ <span id="total_price1"><%= total %></span></h3>
                  </div>

                  <button
                    type="button"
                    id="continueBtn"
                    class="btn btn-dark btn-block btn-lg"
                    style="
                      padding-left: 10rem;
                      padding-right: 10rem;
                      font-size: 19px;
                    "
                    data-mdb-ripple-color="dark"
                  >
                    Continue
                  </button>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>

  document.addEventListener("DOMContentLoaded", function () {
    const cards = document.querySelectorAll(".address-card");
    let selectedAddressId = cards[0].getAttribute("data-id");

    cards.forEach((card) => {
      card.addEventListener("click", function () {
        cards.forEach((c) => c.classList.remove("selected"));
        this.classList.add("selected");
        selectedAddressId = this.getAttribute("data-id");
      });
    });

    document
      .getElementById("continueBtn")
      .addEventListener("click", function () {
        fetch("/submitOrder", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            selectedAddressId: selectedAddressId,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              window.location.href = "/home/payment"; // Redirect to payment page
            } else {
              alert("Error processing order");
            }
          })
          .catch((error) => console.error("Error:", error));
      });
  });

  function deleteAddress(id) {
    Swal.fire({
      title: "Are you sure you want to delete this address?",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
      customClass: {
        popup: "swal-custom-font",
      },
    }).then((result) => {
      if (result.isConfirmed) {
        // Perform an AJAX request instead of submitting the form
        fetch("/deleteAddress/" + id, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            // Include CSRF token here if needed
          },
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.status) {
              Swal.fire({
                title: "Deleted!",
                text: data.message,
                icon: "success",
                timer: 2000,
                customClass: {
                  popup: "swal-custom-font",
                },
              }).then(() => {
                window.location.reload(); // Optionally reload the page
              });
            } else {
              Swal.fire({
                title: "Error!",
                text: data.message || "Failed to delete address.",
                icon: "error",
                timer: 2000,
              });
            }
          })
          .catch((error) => {
            Swal.fire({
              title: "Error!",
              text: "Something went wrong. Please try again later.",
              icon: "error",
              timer: 2000,
            });
            console.error(
              "There was a problem with the fetch operation:",
              error
            );
          });
      }
    });
  }
</script>

