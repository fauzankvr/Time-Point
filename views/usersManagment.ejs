<%- include('layouts/headadmin') %> <%- include('layouts/adminHeader2') %> <%-
include('layouts/adminSidbar2') %>

<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">User Management</h4>
            <p class="card-description">Manage Users detiails</p>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                  </tr>
                </thead>

                <tbody>
                  <% userData.forEach(element => { %>
                  <tr>
                    <td><%= element.name %></td>
                    <td><%= element.email %></td>
                    <td><%= element.phone %></td>
                    <td>
                      <div>
                        
                        <% if ( element.is_block == true) { %>
                          <a
                          href="/admin/userManagment/unBlockUser/<%= element._id %>"
                          type="button"
                          class=" btn btn-primary btn-rounded btn-icon btn-sm"
                        > 
                            <i class="fa-solid fa-user icon-user "></i>
                            </a>
                        <% }else { %>   
                        <a                       
                          href="/admin/userManagment/blockUser/<%= element._id %>"
                          type="button"
                          class="btn btn-secondary btn-rounded btn-icon btn-sm "
                         > 

                        <i class="fa-solid fa-user-lock icon-lock "></i>
                        </a>
                          
                          <% } %>
                     
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layouts/footadmin') %>
